<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.iamkatrechko.projectmanager" >

    <uses-permission android:name="android.permission.VIBRATE"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_icon"
        android:label="@string/app_name"
        android:theme="@style/AppTheme1" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
                android:name=".ServiceMenu"
                android:label="Сервисное меню"/>
        <activity
                android:name=".ProjectsListActivity"
                android:label="Проекты"/>
        <activity
                android:name=".TasksListActivity"
                android:label="Задачи проекта" />
        <activity
                android:name=".SubProjectEditActivity"
                android:label="@string/activity_task_add" />
        <activity
                android:name=".TaskEditActivity"
                android:label="@string/activity_subtask_add"/>
        <activity
                android:name=".ProjectEditActivity"
                android:label="@string/activity_project_add"/>
        <activity
                android:name=".TagEditActivity"
                android:label="Геги блаблабла"/>
        <activity
                android:name=".TasksDoneListActivity"
                android:label="Выполненные"/>
        <activity
                android:name=".ActivitySettings"
                android:label="Настройки"/>
        <activity
                android:name=".ScrollActivity"
                android:label="Тест"/>


        <receiver
                android:name="MyScheduledReceiver"
                android:process=":remote"/>
    </application>
</manifest>
