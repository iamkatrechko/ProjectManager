    <!-- Base application theme. -->
    <style name="AppTheme1" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:actionBarStyle" tools:ignore="NewApi">@style/MyActionBar1</item>
        <item name="actionBarStyle">@style/MyActionBar1</item>
        <item name="colorAccent" tools:ignore="NewApi">@color/accentColor1</item>
        <item name="colorPrimary" tools:ignore="NewApi">@color/actionBarColor1</item>
        <item name="colorPrimaryDark" tools:ignore="NewApi">@color/accentColor1</item>
        <item name="android:colorControlNormal" tools:ignore="NewApi">?attr/colorPrimary</item>
        <item name="android:colorEdgeEffect" tools:ignore="NewApi">@color/actionBarColor1</item>
        <!--<item name="android:colorControlHighlight" tools:ignore="NewApi">@color/actionBarColor1</item> - цвет выделения карточки-->
        <item name="android:statusBarColor" tools:ignore="NewApi">@android:color/transparent</item>
        <item name="android:windowTranslucentStatus" tools:ignore="NewApi">true</item>
    </style>

